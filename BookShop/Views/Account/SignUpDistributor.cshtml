@model BookShop.ViewModels.SignUpViewModel
@{
	ViewBag.Title = "SignUpDistributor";
}

<h2>SignUpDistributor</h2>
@using (Html.BeginForm("SignUpDistributor", "Account", FormMethod.Post))
{
	<div class="text-danger">
		@Html.ValidationMessage("SignUpBuyer_Error", new { @class = "text-danger" })
	</div>
	<div class="form-group row">
		@Html.LabelFor(s => s.Name, new { @class = "col-xs-3 col-md-2" })
		@Html.TextBoxFor(s => s.Name, new { @class = "col-xs-6 col-md-3" })
		@Html.ValidationMessageFor(s => s.Name, "", new { @class = "text-danger col-xs-3 col-md-2" })
	</div>
	<div class="form-group row">
		@Html.LabelFor(s => s.Email, new { @class = "col-xs-3 col-md-2" })
		@Html.TextBoxFor(s => s.Email, new { @class = "col-xs-6 col-md-3" })
		@Html.ValidationMessageFor(s => s.Email, "", new { @class = "text-danger col-xs-3 col-md-2" })
	</div>
	<div class="form-group row">
		@Html.LabelFor(s => s.Password, new { @class = "col-xs-3 col-md-2" })
		@Html.TextBoxFor(s => s.Password, new { @class = "col-xs-6 col-md-3", type = "password" })
		@Html.ValidationMessageFor(s => s.Password, "", new { @class = "text-danger col-xs-3 col-md-2" })
	</div>
	<div class="form-group row">
		@Html.LabelFor(s => s.ConfirmPassword, new { @class = "col-xs-3 col-md-2" })
		@Html.TextBoxFor(s => s.ConfirmPassword, new { @class = "col-xs-6 col-md-3", type = "password" })
		@Html.ValidationMessageFor(s => s.ConfirmPassword, "", new { @class = "text-danger col-xs-3 col-md-2" })
	</div>
	<input type="submit" value="Sign Up" class="btn btn-primary" />
}

@section Scripts{
	@Scripts.Render("~/bundles/jqueryval")
}